#include <iostream>
#include <math.h>
using namespace std;

int main()
{
    //declarar variables
    float a,b,c,s,Area;
    //entrada
    cout<<"Ingrese la el primer lado: ";
    cin>>a;
    cout<<"Ingrese la el segundo lado: ";
    cin>>b;
    cout<<"Ingrese la el tercer lado: ";
    cin>>c;
    //proceso
    s=(a+b+c)/2;
    Area=sqrt(s*(s-a)*(s-b)*(s-c));
    cout<<"El area del triangulo es: "<<Area;
    return 0;
}
