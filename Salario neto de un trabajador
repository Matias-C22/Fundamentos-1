#include <iostream>

using namespace std;
int main()
{
    string nombre;
    float horas,pago,salario,salariofinal;
    cout<<"Ingrese su nombre "<<endl;
    cin>>nombre;
    cout<<"Ingrese la cantidad de horas trabajadas "<<endl;
    cin>>horas;
    cout<<"Ingrese el pago por hora "<<endl;
    cin>>pago;
    salario=pago*horas;
    if (salario>8272.0)
    {
        salariofinal=salario-(salario*0.13);
        cout<<"Su salario neto es: "<<salariofinal;
    }
    else
    {
        cout<<"Su salario neto es: "<<salario;
    }

    return 0;
}
