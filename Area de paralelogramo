#include <iostream>
using namespace std;

int main()
{
    //declarar variables
    float Area,Base,Altura;
    //entrada
    cout<<"ingrese la base del paralelogramo: ";
    cin>>Base;
    cout<<"ingrese la altura del paralelogramo: ";
    cin>>Altura;
    //proceso
    Area=Base*Altura;
    cout<<"el area del paralelogramo es: "<<Area;
    return 0;
}
