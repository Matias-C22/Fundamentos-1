#include <iostream>
#include <math.h>

using namespace std;

int main()
{
    float x,suma=0;
    int n;
    
    do{
        cout<<"Ingrese el valor de n: ";
        cin>>n;
    } while (n<=0);
    cout<<"Ingrese el valor de x: ";
    cin>>x;

    //cout<<x<<"+";
    
    for (int i=1;i<=n;i++){
        suma+= pow(x,i);
        cout<<pow(x,i)<<"+";

    }
    
    cout<<endl<<"La suma es: "<<suma;
    return 0;
}
