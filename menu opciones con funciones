#include <iostream>
#include <string>

using namespace std;

float areacuadrado(float l);
bool puedevotar(int e);
bool esPalindromo(string palabra);

int main()
{
    float area, lado;
    int opcion, edad;
    string lapalabra;

    do {
        cout << "MENU" << endl;
        cout << "====" << endl;
        cout << "1. Area de un cuadrado" << endl;
        cout << "2. Puede votar" << endl;
        cout << "3. Palindromo" << endl;
        cout << "0. Salir" << endl;
        cout << "Ingrese la opcion que desea: " << endl;
        cin >> opcion;
        switch (opcion) {
        case 1:
            do{
                cout << "Ingrese el lado: ";
                cin >> lado;
                if(lado<=0){
                    cout<<"Ingrese un numero valido"<<endl;
                }
            } while (lado <= 0);
            area = areacuadrado(lado);
            cout << "El area del cuadrado es: " << area << " mÂ²"<< endl;
            break;
        case 2:
            cout << "Ingrese su edad: ";
            cin >> edad;
            if (puedevotar(edad))
                cout << "Puede votar" << endl;
            else
                cout << "No puede votar" << endl;
            break;
        case 3:
            cin.ignore(); 
            cout << "Ingrese la palabra: ";
            getline(cin, lapalabra);
            if (esPalindromo(lapalabra))
                cout << "Es palindromo" << endl;
            else
                cout << "No es palindromo" << endl;
            break;
        case 0: 
            cout << "Salir" << endl;
            break;
        default: 
            cout << "Opcion invalida" << endl;
        }

    } while (opcion != 0);

    return 0;
}

float areacuadrado(float l) {
    return l * l;
}

bool puedevotar(int e) {
    return e >= 18;
}

bool esPalindromo(string palabra) {
    for (int i = 0; i < palabra.length() / 2; i++) {
        if (palabra.at(i) != palabra.at(palabra.length() - 1 - i))
            return false;
    }
    return true;
}
