#include <iostream>
#include <string>
#include <math.h>

using namespace std;

//int diferencia(int d);

int main()
{
    int num, dif, residuo,num1 , num2,i=1;
    do {
        cout << "Ingrese un numero positivo: ";
        cin >> num;
        if (num <= 0)
            cout << "Por favor ingrese un numero positivo" << endl;
    } while (num <= 0);

    
    string n = to_string(num);
   
    cout << "La diferencias dentro de el numero son: " << endl;
    while (i <= n.length() / 2) {
        residuo = num % 10;
        num1 = num%(10000-10*i);
        num2 = residuo;
        dif = num1 - num2;
        if (dif < 0) {
            dif = -dif;
        }
        
        cout << dif << " ";
        num /= 10;
        i++;
    }

    return 0;
}

